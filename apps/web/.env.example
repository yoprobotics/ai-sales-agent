EMAIL_TEMPLATE_PAYMENT_FAILED="d-..."
EMAIL_TEMPLATE_TRIAL_ENDING="d-..."

# Webhooks
WEBHOOK_SECRET="your-webhook-secret"

# Data Regions (for compliance)
DEFAULT_DATA_REGION="EU"
SUPPORTED_DATA_REGIONS="US,EU,CA"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# Performance
MAX_FILE_SIZE="10485760" # 10MB in bytes
MAX_PROSPECTS_PER_IMPORT="10000"

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/ai_sales_agent"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY="price_..."
STRIPE_PRICE_STARTER_YEARLY="price_..."
STRIPE_PRICE_PRO_MONTHLY="price_..."
STRIPE_PRICE_PRO_YEARLY="price_..."
STRIPE_PRICE_BUSINESS_MONTHLY="price_..."
STRIPE_PRICE_BUSINESS_YEARLY="price_..."

# Stripe Trial Configuration
STRIPE_TRIAL_ENABLED="true"
STRIPE_TRIAL_DAYS="14"

# SendGrid Configuration
SENDGRID_API_KEY="SG...."
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="AI Sales Agent"

# OpenAI Configuration
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=4000

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_BASE_URL="http://localhost:3000"
NODE_ENV="development"

# S3 Compatible Storage (Optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET_NAME=""
S3_ENDPOINT="" # For custom S3-compatible storage

# Redis Configuration (Optional - for caching and queues)
REDIS_URL="redis://localhost:6379"

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key"

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_REQUESTS_PER_MINUTE="100"

# Admin Configuration
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="change-this-secure-password"

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN=""
ANALYTICS_ID=""

# Feature Flags
FEATURE_AI_INSIGHTS="true"
FEATURE_MULTI_LANGUAGE="true"
FEATURE_ADVANCED_SEQUENCES="true"
FEATURE_CRM_INTEGRATIONS="false"
FEATURE_TEAM_COLLABORATION="false"

# Development Tools
PRISMA_STUDIO_PORT="5555"
NEXT_TELEMETRY_DISABLED="1"

# Security Headers

{
  "name": "ai-sales-agent-root",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered B2B prospecting SaaS platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:stripe": "cd apps/web && npm run test:stripe",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:web": "npm install && cd apps/web && npm run build",
    "build:api": "npm install && cd apps/api && npm run build",
    "start:web": "cd apps/web && npm start",
    "start:api": "cd apps/api && npm start",
    "vercel-build": "npm run build:web",
    "db:generate": "cd apps/api && prisma generate",
    "db:migrate": "cd apps/api && prisma migrate dev",
    "db:migrate:prod": "cd apps/api && prisma migrate deploy",
    "db:push": "cd apps/api && prisma db push",
    "db:studio": "cd apps/api && prisma studio",
    "db:seed": "cd apps/api && tsx prisma/seed.ts",
    "db:reset": "cd apps/api && prisma migrate reset --force",
    "stripe:setup": "node scripts/stripe-setup.js",
    "stripe:webhook": "stripe listen --forward-to localhost:3001/api/webhooks/stripe",
    "stripe:test": "node scripts/stripe-test.js",
    "setup": "npm install && npm run db:generate && npm run db:migrate",
    "setup:complete": "npm run setup && npm run stripe:setup && npm run db:seed"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "@types/node": "^20.5.2",
    "@types/jest": "^29.5.11",
    "eslint": "^8.48.0",
    "prettier": "^3.0.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.2",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "dotenv": "^16.3.1",
    "stripe": "^14.10.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}

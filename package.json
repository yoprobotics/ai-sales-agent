{
  "name": "ai-sales-agent-root",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered B2B prospecting SaaS platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && npm run build",
    "start:web": "cd apps/web && npm start",
    "start:api": "cd apps/api && npm start",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rm -rf node_modules **/node_modules **/dist **/.next **/.turbo",
    "setup": "npm install && cd apps/web && npm install && cd ../.. && cd packages/core && npm install",
    "db:generate": "cd apps/web && npx prisma generate",
    "db:push": "cd apps/web && npx prisma db push",
    "db:migrate": "cd apps/web && npx prisma migrate dev",
    "db:studio": "cd apps/web && npx prisma studio",
    "db:seed": "cd apps/web && npx tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^20.5.2",
    "eslint": "^8.48.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

{
  "name": "ai-sales-agent-root",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered B2B prospecting SaaS platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "jest --selectProjects web api core --coverage",
    "test:integration": "jest --selectProjects api --testMatch='**/*.test.ts' --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov > coverage.lcov",
    "test:watch": "jest --watch",
    "test:stripe": "cd apps/web && npm run test:stripe",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules coverage .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:web": "npm install && cd apps/web && npm run build",
    "build:api": "npm install && cd apps/api && npm run build",
    "start:web": "cd apps/web && npm start",
    "start:api": "cd apps/api && npm start",
    "vercel-build": "npm run build:web",
    "db:generate": "cd apps/api && prisma generate",
    "db:migrate": "cd apps/api && prisma migrate dev",
    "db:migrate:prod": "cd apps/api && prisma migrate deploy",
    "db:push": "cd apps/api && prisma db push",
    "db:studio": "cd apps/api && prisma studio",
    "db:seed": "cd apps/api && tsx prisma/seed.ts",
    "db:seed:test": "cd apps/api && tsx prisma/seed.test.ts",
    "db:reset": "cd apps/api && prisma migrate reset --force",
    "stripe:setup": "node scripts/stripe-setup.js",
    "stripe:webhook": "stripe listen --forward-to localhost:3001/api/webhooks/stripe",
    "stripe:test": "node scripts/stripe-test.js",
    "setup": "npm install && npm run db:generate && npm run db:migrate",
    "setup:complete": "npm run setup && npm run stripe:setup && npm run db:seed",
    "playwright:install": "npx playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@turbo/gen": "^1.10.12",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.5.2",
    "@types/node-mocks-http": "^1.0.0",
    "codecov": "^3.8.3",
    "eslint": "^8.48.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-mocks-http": "^1.14.1",
    "playwright": "^1.40.1",
    "prettier": "^3.0.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "whatwg-fetch": "^3.6.20"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@sendgrid/mail": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.24.1",
    "stripe": "^14.10.0",
    "zod": "^3.22.4"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}

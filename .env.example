# ================================================
# Database Configuration
# ================================================
# PostgreSQL connection string (Neon, Supabase, or local)
DATABASE_URL="postgresql://user:password@localhost:5432/ai_sales_agent?schema=public"

# Optional: Shadow database for Prisma migrations (development only)
# SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/ai_sales_agent_shadow?schema=public"

# ================================================
# Authentication & Security
# ================================================
# JWT secrets (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Encryption key for sensitive data (must be exactly 32 characters)
ENCRYPTION_KEY="your-32-char-encryption-key-here"

# ================================================
# Stripe Configuration
# ================================================
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Product IDs (create these in Stripe Dashboard)
STRIPE_STARTER_PRICE_ID="price_..."
STRIPE_PRO_PRICE_ID="price_..."
STRIPE_BUSINESS_PRICE_ID="price_..."

# ================================================
# SendGrid Configuration
# ================================================
SENDGRID_API_KEY="SG...."
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="AI Sales Agent"

# Template IDs (create these in SendGrid)
SENDGRID_WELCOME_TEMPLATE_ID="d-..."
SENDGRID_PASSWORD_RESET_TEMPLATE_ID="d-..."
SENDGRID_EMAIL_VERIFICATION_TEMPLATE_ID="d-..."

# ================================================
# OpenAI Configuration
# ================================================
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS="4000"
OPENAI_TEMPERATURE="0.7"

# ================================================
# Application Configuration
# ================================================
NODE_ENV="development"
APP_BASE_URL="http://localhost:3000"
API_BASE_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# ================================================
# S3-Compatible Storage (Optional)
# ================================================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET_NAME=""
S3_ENDPOINT="" # For S3-compatible services like MinIO, DigitalOcean Spaces

# ================================================
# Admin Configuration
# ================================================
ADMIN_EMAIL="admin@yourcompany.com"
ADMIN_DEFAULT_PASSWORD="Admin123!"

# ================================================
# Rate Limiting
# ================================================
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_LOGIN_MAX="5"
RATE_LIMIT_PASSWORD_RESET_MAX="3"

# ================================================
# Monitoring & Logging
# ================================================
LOG_LEVEL="info" # debug | info | warn | error
ENABLE_OPENTELEMETRY="false"
OTEL_EXPORTER_OTLP_ENDPOINT=""
OTEL_SERVICE_NAME="ai-sales-agent"

# ================================================
# Feature Flags
# ================================================
ENABLE_AI_INSIGHTS="true"
ENABLE_MULTI_LANGUAGE="true"
ENABLE_ADVANCED_SEQUENCES="true"
ENABLE_CRM_INTEGRATIONS="false"
ENABLE_TEAM_COLLABORATION="false"

# ================================================
# External Integrations (Future)
# ================================================
# HubSpot
HUBSPOT_ACCESS_TOKEN=""
HUBSPOT_CLIENT_ID=""
HUBSPOT_CLIENT_SECRET=""

# Salesforce
SALESFORCE_CLIENT_ID=""
SALESFORCE_CLIENT_SECRET=""
SALESFORCE_REDIRECT_URI=""

# Clearbit
CLEARBIT_API_KEY=""

# Apollo
APOLLO_API_KEY=""

# ================================================
# CORS Configuration
# ================================================
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS="true"

# ================================================
# Session Configuration
# ================================================
SESSION_SECRET="your-session-secret-change-this"
SESSION_MAX_AGE="86400" # 24 hours in seconds
COOKIE_SECURE="false" # Set to true in production with HTTPS
COOKIE_SAME_SITE="lax" # strict | lax | none
COOKIE_HTTP_ONLY="true"
COOKIE_DOMAIN="localhost"

# ================================================
# Redis (Optional - for caching and queues)
# ================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ================================================
# Vercel Specific (Production)
# ================================================
# These are automatically set by Vercel, don't add them manually
# VERCEL_URL
# VERCEL_ENV
# VERCEL_GIT_COMMIT_SHA
# VERCEL_GIT_COMMIT_MESSAGE
